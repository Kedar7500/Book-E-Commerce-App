@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> Create New Product</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="text-center">Book Title</th>
                <th class="text-center">Book Author</th>
                <th class="text-center">Description</th>
                <th class="text-center">Least Price</th>
                <th class="text-center">Price</th>
                <th class="text-center">Price50</th>
                <th class="text-center">Price100</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                <td>@obj.Title</td>
                <td>@obj.Author</td>
                <td>@obj.Description</td>
                <td>@obj.LeastPrice</td>
                <td>@obj.Price</td>
                <td>@obj.Price50</td>
                <td>@obj.Price100</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>EDIT
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>DELETE
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>